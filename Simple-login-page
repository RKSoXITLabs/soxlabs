<script>
function validateForm() {
    var x = document.forms["myForm"]["fname"].value;
    var y = document.forms["myForm"]["pname"].value;
    var i=0;
    var passw=  /^[A-Za-z]\w{7,14}$/;
    if (x == null || x == "") {
        //x.style.background = 'Yellow';
        alert("Name must be filled out");
        return false;
    }
    else if(x.length<7)
    {
        alert("Username should contain minimum of seven letters");
        console.log("false");
        return false;
    }

  /*  while(i!=x.length)
    {
        if(x.charAt(i)==" " || x.charAt(i)==)
    }*/

    if (y == null || y == "") {
        alert("passwrd must be filled out");
        return false;
    }
    else if(y.charAt(0)!=(y.charAt(0)).toUpperCase()){
      alert("First letter should be capital");
      return false;}
      if(x.match(passw))
      {
        return true;
      }
      else
      {
        alert("password can contain only charcters,numbers,underscore and first character should be a character");
        return false;
      }
}
</script>
